{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",              
    "module": "esnext",             
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "lib": ["dom", "esnext"],
    "baseUrl": "./",
  },
  "include": ["src/**/*.mts"],
}
